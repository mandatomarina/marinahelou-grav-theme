{% extends 'partials/base.html.twig' %}

{% block content %}

{% set votos = loadJson(page.header.votacao_server) %}
	<p>{{ page.content }}</p>
	<table class="votes">
		<col width="430"><col width="62"><col width="94">
		{% for vote in votos.results %}
			{% if vote.public %}
			<tr class="vote">
				{% if vote.url %}
					<td data-label="Projeto" colspan="3"><h2>Projeto: <a href="{{vote.url}}" target="_blank">{{vote.tipo}} {{vote.numero}}/{{vote.ano}}</a></h2></td>
				{% else %}
					<td data-label="Projeto" colspan="3"><h2>Projeto: {{vote.tipo}} {% if vote.numero %}{{vote.numero}}/{{vote.ano}}{% endif %}</h2></td>
				{% endif %}
			</tr>
			<tr>
				<td data-label="Ementa" class="ementa">{{vote.ementa_cidada}}</td>
				<td data-label="Voto" class="voto-{{vote.voto}}" rowspan="5">{{vote.voto}}</td>
				<td data-label="Status" class="status-{{vote.status}}"" rowspan="5">{{vote.status}}</td>
			</tr>
			<tr>
	      <td><h2>Justificativa do Voto:</h2></td>
	    </tr>
			<tr>
				<td data-label="Justificativa">{{vote.justificativa}}</td>
			</tr>
			<tr>
				<td data-label="Resultado"><h2>Resultado no Plen√°rio: {{vote.resultado}}</h2></td>
			<tr>
				<td data-label="Data"><h3>{{vote.data}}</h3></td>
			</tr>
			<tr class="separator">
				<td colspan="3"></td>
			</tr>
				{% endif %}
			{% endfor %}

	</table>
{% endblock %}
