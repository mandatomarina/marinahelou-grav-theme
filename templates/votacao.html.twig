{% extends 'partials/base.html.twig' %}

{% block content %}

{% set votos = loadJson(page.header.votacao_server) %}
	<p>{{ page.content }}</p>
	<table class="votes">
		{% for vote in votos.results %}
			{% if vote.public %}
			<tr class="vote">
				{% if vote.url %}
					<td data-label="Projeto">Projeto: <a href="{{vote.url}}" target="_blank">{{vote.tipo}} {{vote.numero}}/{{vote.ano}}</a></td>
				{% else %}
					<td data-label="Projeto">{{vote.tipo}} {% if vote.numero %}{{vote.numero}}/{{vote.ano}}{% endif %}</td>
				{% endif %}
			</tr>
			<tr>
				<td data-label="Ementa">{{vote.ementa_cidada}}</td>
				<td data-label="Voto">{{vote.voto}}</td>
				<td data-label="Status">{{vote.status}}</td>
			</tr>
			<tr>
				<td data-label="Justificativa">{{vote.justificativa}}</td>
			</tr>
			<tr>
				<td data-label="Resultado">Resultado no Plen√°rio: {{vote.resultado}}</td>
			<tr>
				<td data-label="Data">{{vote.data}}</td>
			</tr>
				{% endif %}
			{% endfor %}

	</table>
{% endblock %}
